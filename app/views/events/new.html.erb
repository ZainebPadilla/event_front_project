<div class="jumbotron">
        <div class="container">
          <h1 class="display-4">Create a new event !</h1>
          <p>Lets create a new event </p>
          <p><a class="btn btn-primary btn-lg" href="#" role="button">Learn more »</a></p>
        </div>
      </div>

        <% if @event.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(@event.errors.count, "erreur") %> empêchent la sauvegarde de cet événement :</h2>
            <ul>
            <% @event.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
            </ul>
        </div>
        <% end %>


    <%= form_for @event do |f| %>

    <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
    <% if @event.errors[:title].any? %>
     <div class="error-message"><%= @event.errors[:title].first %></div>
    <% end %>
    </div>

    <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control" %>
    <% if @event.errors[:description].any? %>
      <div class="error-message"><%= @event.errors[:description].first %></div>
    <% end %>
    </div>

    <div class="form-group">
    <%= f.label :location %>
    <%= f.text_field :location, class: "form-control" %>
    <% if @event.errors[:location].any? %>
      <div class="error-message"><%= @event.errors[:location].first %></div>
    <% end %>
    </div>

    <div class="form-group">
    <%= f.label :start_date %>
    <%= f.datetime_select :start_date, class: "form-control" %>
    <% if @event.errors[:start_date].any? %>
      <div class="error-message"><%= @event.errors[:start_date].first %></div>
    <% end %>
    </div>*

    <div class="form-group">
    <%= f.label :duration %>
    <%= f.number_field :duration, class: "form-control" %>
    <% if @event.errors[:duration].any? %>
      <div class="error-message"><%= @event.errors[:duration].first %></div>
    <% end %>
    </div>

    <div class="form-group">
    <%= f.label :price %>
    <%= f.number_field :price, class: "form-control" %>
    <% if @event.errors[:price].any? %>
      <div class="error-message"><%= @event.errors[:price].first %></div>
    <% end %>
    </div>

     <%= f.submit "Create Event", class: "btn btn-primary" %>
<% end %>