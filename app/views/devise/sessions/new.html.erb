<div class="container my-4 d-flex justify-content-center">
  <div class="col-md-6 col-lg-4">
  <h2 class="text-center">Connexion</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="mb-3">
      <%= f.label :email, "Email" %>
      <%= f.email_field :email, autofocus: true, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :password, "Mot de passe" %>
      <%= f.password_field :password, class: "form-control" %>
    </div>

    <div class="mb-3 form-check">
      <%= f.check_box :remember_me, class: "form-check-input" %>
      <%= f.label :remember_me, "Se souvenir de moi", class: "form-check-label" %>
    </div>

     <div class="d-flex justify-content-between">
      <%= f.submit "Connexion", class: "btn btn-primary" %>
     </div>

    <div class="text-center mt-2">
      <%= link_to "Mot de passe oublié ?", new_password_path(resource_name), class: "btn btn-link" %>
    </div>
    
    <p class="mt-3 text-center">Pas encore inscrit ? <%= link_to "Créer un compte", new_registration_path(resource_name) %></p>
  <% end %>

  <%= render "devise/shared/error_messages", resource: resource %>
  </div>
</div>
